/* components/clock/clock.wxss */
.container{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.container image{

  width: 320rpx;
  height: 320rpx;
}
.container .content{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  color: #fff;
  font-size: 26rpx;
  font-family: AndaleMono;
  letter-spacing: 1.0;
}
.container:active{
  opacity: 0.9
}