/* pages/me/me.wxss */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
} 
button,.button-hover{
  background: transparent
}

button::after{ border: none; }
.container{
  background: #eee;
  font-family: PingFangSC-Regular;
}
.header{
  width: 100%;
  height: 170rpx;
  background: #fff;
  display: flex;
  align-items: center;
  position: relative;
}
.header .avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  overflow: hidden;
  text-align: center;
  margin-left: 50rpx;
  margin-right: 25rpx
}
.header .name{
  color: #333333;
  font-size: 32rpx;
}
.header .btn{
  color:#F6705A;
  position: absolute;
  right: 50rpx;
  font-size: 30rpx;
}

.tab{
  width: 100%;
  background: #fff;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 30rpx;
  font-family: PingFangSC-Regular;
  color: #333333;
  font-size: 28rpx;
  position: relative
}
.tabline{
  position: absolute;
  width: 200rpx;
  height: 8rpx;
  background: #F6705A;
  left: 70rpx;
  bottom: 6rpx;
  border-radius: 10rpx;
  transition: .8s
}
.taskActive{
  transform: translateX(380rpx) ;
}

.item{
  background: #fff;
  width: 650rpx;
  padding: 10rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 8rpx;
  box-shadow: 0px 5rpx 5rpx rgb(226, 221, 221);  
}
.item .time{
  width: 100%;
  height: 50rpx;
  font-size: 36rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.item .content{
  display: flex;
  margin-left: 20rpx;
  margin-top:20rpx;
}
.item .content .detail{
  margin-left: 20rpx;
  margin-right: 20rpx;
}